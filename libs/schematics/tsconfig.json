{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/libs/rules/lib/schematics",
    "noEmitOnError": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "**/*.spec.ts",
    "*/files/**/*"
  ]
}
